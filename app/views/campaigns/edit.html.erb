<% content_for :page_title do %>
Edit Campaign - 
<% end %>
<div class="container">
  <div class="page-header">
    <h1>
      Editing Campaign

      <small><%= @org.name %></small>
    </h1>
  </div>

  <%= render 'form' %>

  <div class="clearfix"></div>
  <div class="pull-left">
    <%= link_to "<span class=\"glyphicon glyphicon-ban-circle\" aria-hidden=\"true\"></span> Cancel".html_safe, [@campaign.org, @campaign], class: "btn btn-default" %>
  </div>
  <div class="pull-right">
    <%= link_to "<span class=\"glyphicon glyphicon-trash\" aria-hidden=\"true\"></span> Delete campaign...".html_safe, [@campaign.org, @campaign], method: :delete, data: { confirm: "Are you sure you want to delete this campaign?" }, class: "btn btn-danger" %>
  </div>
</div>
