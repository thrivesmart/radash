<%= form_for([@creative.org,@creative]) do |f| %>
<% if @creative.errors.any? %>
<div id="error_explanation" class="alert alert-danger" role="alert">
  <strong><%= pluralize(@creative.errors.count, "error") %> prohibited this creative from being saved:</strong>

  <ul>
    <% @creative.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>

<div class="row">
