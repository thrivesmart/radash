<% content_for :page_title do %>
Creative Details - 
<% end %>
<div class="container">
  <div class="page-header">
    <h1>
      <div class="pull-left">
        <%= link_to "<span class=\"glyphicon glyphicon-step-backward\" aria-hidden=\"true\"></span>".html_safe, org_creatives_path(@creative.org), class: "btn btn-default", title: "Back to creatives" %>
        &nbsp;
      </div>
      <div class="pull-right">
        <%= link_to "<span class=\"glyphicon glyphicon-pencil\" aria-hidden=\"true\"></span> Edit".html_safe, edit_org_creative_path(@creative.org, @creative), class: "btn btn-warning" %>
      </div>
      Creative Details

      <small><%= @org.name %></small>
    </h1>
  </div>


  <div class="row">
    <label class="col-sm-3 text-right text-muted">Asset</label>
    <div class="col-sm-9"><%= link_to @creative.asset.name, [@creative.asset.org, @creative.asset] %></div>
  </div>

  <div class="row">
    <label class="col-sm-3 text-right text-muted">Title</label>
    <div class="col-sm-9"><%= @creative.title %></div>
  </div>

  <div class="row">
    <label class="col-sm-3 text-right text-muted">Url</label>
    <div class="col-sm-9"><%= @creative.url %></div>
  </div>

  <div class="row">
    <label class="col-sm-3 text-right text-muted">Postername</label>
    <div class="col-sm-9"><%= @creative.postername %></div>
  </div>

  <div class="row">
    <label class="col-sm-3 text-right text-muted">Posterid</label>
    <div class="col-sm-9"><%= @creative.posterid %></div>
  </div>

  <div class="row">
    <label class="col-sm-3 text-right text-muted">Promoted thingid</label>
    <div class="col-sm-9"><%= @creative.promoted_thingid %></div>
  </div>

  <div class="row">
    <label class="col-sm-3 text-right text-muted">Locale</label>
    <div class="col-sm-9"><%= @creative.locale %></div>
  </div>

  <div class="row">
    <label class="col-sm-3 text-right text-muted">Attachment type</label>
    <div class="col-sm-9"><%= @creative.attachment_type %></div>
  </div>

  <div class="row">
    <label class="col-sm-3 text-right text-muted">Attachment html</label>
    <div class="col-sm-9"><%= @creative.attachment_html %></div>
  </div>

  <div class="row">
    <label class="col-sm-3 text-right text-muted">Approved at</label>
    <div class="col-sm-9"><%= @creative.approved_at %></div>
  </div>

  <div class="row">
    <label class="col-sm-3 text-right text-muted">Approver name</label>
    <div class="col-sm-9"><%= @creative.approver_name %></div>
  </div>

</div>

