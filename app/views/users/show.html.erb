<% content_for :page_title do %>
user Details - 
<% end %>
<div class="container">
  <div class="page-header">
    <h1>
      <div class="pull-left">
        <%= link_to "<span class=\"glyphicon glyphicon-step-backward\" aria-hidden=\"true\"></span>".html_safe, '/', class: "btn btn-default", title: "Home" %>
        &nbsp;
      </div>
      <% if authed_user && authed_user.id.to_s == @user.id.to_s %>
      <div class="pull-right">
        <%= link_to "<span class=\"glyphicon glyphicon-pencil\" aria-hidden=\"true\"></span> Edit".html_safe, edit_account_user_path(@user), class: "btn btn-warning" %>
      </div>
      <% end %>
      <%= @user.username %>
      <small>
      User Details
      </small>
    </h1>
  </div>

  <div class="row">
    <label class="col-sm-3 text-right text-muted">Username</label>
    <div class="col-sm-9"><%= @user.username %></div>
  </div>

  <div class="row">
    <label class="col-sm-3 text-right text-muted">Email</label>
    <div class="col-sm-9"><%= @user.email %></div>
  </div>

  <div class="row">
    <label class="col-sm-3 text-right text-muted">First name</label>
    <div class="col-sm-9"><%= @user.first_name %></div>
  </div>

  <div class="row">
    <label class="col-sm-3 text-right text-muted">Middle name</label>
    <div class="col-sm-9"><%= @user.middle_name %></div>
  </div>

  <div class="row">
    <label class="col-sm-3 text-right text-muted">Last name</label>
    <div class="col-sm-9"><%= @user.last_name %></div>
  </div>

  <div class="row">
    <label class="col-sm-3 text-right text-muted">Phone</label>
    <div class="col-sm-9"><%= @user.phone %></div>
  </div>

  <div class="row">
    <label class="col-sm-3 text-right text-muted">Picurl</label>
    <div class="col-sm-9"><%= @user.picurl %></div>
  </div>

  <div class="row">
    <label class="col-sm-3 text-right text-muted">Redditid</label>
    <div class="col-sm-9"><%= @user.redditid %></div>
  </div>

  <div class="row">
    <label class="col-sm-3 text-right text-muted">Superuser</label>
    <div class="col-sm-9"><%= @user.superuser %></div>
  </div>

</div>

