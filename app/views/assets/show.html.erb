<% content_for :page_title do %>
asset Details - 
<% end %>
<div class="container">
  <div class="page-header">
    <h1>
      <div class="pull-left">
        <%= link_to "<span class=\"glyphicon glyphicon-step-backward\" aria-hidden=\"true\"></span>".html_safe, org_assets_path(@asset.org), class: "btn btn-default", title: "Back to assets" %>
        &nbsp;
      </div>
      <div class="pull-right">
        <%= link_to "<span class=\"glyphicon glyphicon-pencil\" aria-hidden=\"true\"></span> Edit".html_safe, edit_org_asset_path(@asset.org, @asset), class: "btn btn-warning" %>
      </div>
      Asset Details
      <small><%= @org.name %></small>
    </h1>
  </div>
  
  <div class="row">
    <label class="col-sm-3 text-right text-muted">Name</label>
    <div class="col-sm-9"><%= @asset.name %></div>
  </div>
  
  <div class="row">
    <label class="col-sm-3 text-right text-muted">File</label>
    <div class="col-sm-9"><%= link_to @asset.file, @asset.file.url %></div>
  </div>

  <div class="row">
    <label class="col-sm-3 text-right text-muted">Html</label>
    <div class="col-sm-9"><%= @asset.html %></div>
  </div>

  <div class="row">
    <label class="col-sm-3 text-right text-muted">Width</label>
    <div class="col-sm-9"><%= @asset.width %></div>
  </div>

  <div class="row">
    <label class="col-sm-3 text-right text-muted">Height</label>
    <div class="col-sm-9"><%= @asset.height %></div>
  </div>

</div>

