    <%= f.label :html, { class: "control-label col-sm-2" } %>
    <div class="col-sm-10">
      <%= f.text_area :html, { class: "form-control" } %>
    </div>
  </div>
</div>
<div class="row">
  <div class="form-group<%= f.object.errors[:width].empty? ? "" : " has-error has-feedback" %>">
