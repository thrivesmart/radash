<%= form_for([@asset.org, @asset]) do |f| %>
<% if @asset.errors.any? %>
<div id="error_explanation" class="alert alert-danger" role="alert">
  <strong><%= pluralize(@asset.errors.count, "error") %> prohibited this asset from being saved:</strong>

  <ul>
    <% @asset.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>


<div class="row">
  <div class="form-group<%= f.object.errors[:file].empty? ? "" : " has-error has-feedback" %>">
    <%= f.label :file, { class: "control-label col-sm-2" } %>
    <div class="col-sm-10">
      <%= f.file_field :file, { class: "form-control" } %>
    </div>
  </div>
</div>
