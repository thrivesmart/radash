<% content_for :page_title do %>
Org Details - 
<% end %>
<div class="container">
  <div class="page-header">
    <h1>
      <div class="pull-left">
        <%= link_to "<span class=\"glyphicon glyphicon-step-backward\" aria-hidden=\"true\"></span>".html_safe, orgs_path, class: "btn btn-default", title: "Back to orgs" %>
        &nbsp;
      </div>
      <% if authed_administrator %>
      <div class="pull-right">
        <%= link_to "<span class=\"glyphicon glyphicon-user\" aria-hidden=\"true\"></span> Members".html_safe, admin_org_memberships_path(@org), class: "btn btn-default" %>
        <%= link_to "<span class=\"glyphicon glyphicon-pencil\" aria-hidden=\"true\"></span> Edit".html_safe, edit_admin_org_path(@org), class: "btn btn-warning" %>
      </div>
      <% end %>
      Org Details
      <small><%= @org.name %></small>
    </h1>
  </div>

  <div class="row">
    <label class="col-sm-3 text-right text-muted">Name</label>
    <div class="col-sm-9"><%= @org.name %></div>
  </div>

  <div class="row">
    <label class="col-sm-3 text-right text-muted">Permalink</label>
    <div class="col-sm-9"><%= @org.permalink %></div>
  </div>

  <div class="row">
    <label class="col-sm-3 text-right text-muted">Email</label>
    <div class="col-sm-9"><%= @org.email %></div>
  </div>

  <div class="row">
    <label class="col-sm-3 text-right text-muted">Phone</label>
    <div class="col-sm-9"><%= @org.phone %></div>
  </div>

  <div class="row">
    <label class="col-sm-3 text-right text-muted">Url</label>
    <div class="col-sm-9"><%= @org.url %></div>
  </div>

  <div class="row">
    <label class="col-sm-3 text-right text-muted">Owner</label>
    <div class="col-sm-9"><%= @org.owner %></div>
  </div>

  <div class="row">
    <label class="col-sm-3 text-right text-muted">Street address1</label>
    <div class="col-sm-9"><%= @org.street_address1 %></div>
  </div>

  <div class="row">
    <label class="col-sm-3 text-right text-muted">Street address2</label>
    <div class="col-sm-9"><%= @org.street_address2 %></div>
  </div>

  <div class="row">
    <label class="col-sm-3 text-right text-muted">City</label>
    <div class="col-sm-9"><%= @org.city %></div>
  </div>

  <div class="row">
    <label class="col-sm-3 text-right text-muted">State province region</label>
    <div class="col-sm-9"><%= @org.state_province_region %></div>
  </div>

  <div class="row">
    <label class="col-sm-3 text-right text-muted">Zip postal code</label>
    <div class="col-sm-9"><%= @org.zip_postal_code %></div>
  </div>

  <div class="row">
    <label class="col-sm-3 text-right text-muted">Country code</label>
    <div class="col-sm-9"><%= @org.country_code %></div>
  </div>

  <div class="row">
    <label class="col-sm-3 text-right text-muted">Timezone</label>
    <div class="col-sm-9"><%= @org.timezone %></div>
  </div>

  <div class="row">
    <label class="col-sm-3 text-right text-muted">Currency code</label>
    <div class="col-sm-9"><%= @org.currency_code %></div>
  </div>


  <hr/>
  
  <h3>
  <% if @org.assets.count == 0 %>
  Step 1: <%= link_to 'Add Assets', org_assets_path(@org) %> to be used in your ads, by uploading them!
  <% elsif @org.creatives.count == 0 %>
  Step 2: <%= link_to 'Build Creative', org_creatives_path(@org) %> to be used in your ads, by writing them!
  <% elsif @org.ads.count == 0 %>
  Step 3: <%= link_to 'Setup Ads', org_ads_path(@org) %> to tie creatives to targeting!
  <% end %>
  </h3>

  <hr/>
  
  <div class="row">
    <label class="col-sm-3 text-right text-muted">Campaigns</label>
    <div class="col-sm-9"><%= link_to @org.campaigns.count, org_campaigns_path(@org) %></div>
  </div>

  <div class="row">
    <label class="col-sm-3 text-right text-muted">Ads</label>
    <div class="col-sm-9"><%= link_to @org.ads.count, org_ads_path(@org) %></div>
  </div>

  <div class="row">
    <label class="col-sm-3 text-right text-muted">Creatives</label>
    <div class="col-sm-9"><%= link_to @org.creatives.count, org_creatives_path(@org) %></div>
  </div>

  <div class="row">
    <label class="col-sm-3 text-right text-muted">Asset Library</label>
    <div class="col-sm-9"><%= link_to @org.assets.count, org_assets_path(@org) %></div>
  </div>
</div>

