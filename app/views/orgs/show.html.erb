    <div class="col-sm-9"><%= @org.zip_postal_code %></div>
  </div>

  <div class="row">
    <label class="col-sm-3 text-right text-muted">Country code</label>
    <div class="col-sm-9"><%= @org.country_code %></div>
  </div>

  <div class="row">
    <label class="col-sm-3 text-right text-muted">Timezone</label>
    <div class="col-sm-9"><%= @org.timezone %></div>
  </div>

  <div class="row">
    <label class="col-sm-3 text-right text-muted">Currency code</label>
    <div class="col-sm-9"><%= @org.currency_code %></div>
  </div>

</div>

