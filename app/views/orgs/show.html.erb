<% content_for :page_title do %>
org Details - 
<% end %>
<div class="container">
  <div class="page-header">
    <h1>
      <div class="pull-left">
        <%= link_to "<span class=\"glyphicon glyphicon-step-backward\" aria-hidden=\"true\"></span>".html_safe, orgs_path, class: "btn btn-default", title: "Back to orgs" %>
        &nbsp;
      </div>
      <% if authed_administrator %>
      <div class="pull-right">
        <%= link_to "<span class=\"glyphicon glyphicon-pencil\" aria-hidden=\"true\"></span> Edit".html_safe, edit_admin_org_path(@org), class: "btn btn-warning" %>
      </div>
      <% end %>
      Org Details
    </h1>
  </div>

  <div class="row">
    <label class="col-sm-3 text-right text-muted">Name</label>
    <div class="col-sm-9"><%= @org.name %></div>
  </div>

  <div class="row">
    <label class="col-sm-3 text-right text-muted">Permalink</label>
    <div class="col-sm-9"><%= @org.permalink %></div>
  </div>

  <div class="row">
    <label class="col-sm-3 text-right text-muted">Email</label>
    <div class="col-sm-9"><%= @org.email %></div>
  </div>

  <div class="row">
    <label class="col-sm-3 text-right text-muted">Phone</label>
    <div class="col-sm-9"><%= @org.phone %></div>
  </div>

  <div class="row">
    <label class="col-sm-3 text-right text-muted">Url</label>
    <div class="col-sm-9"><%= @org.url %></div>
  </div>

  <div class="row">
    <label class="col-sm-3 text-right text-muted">Owner</label>
    <div class="col-sm-9"><%= @org.owner %></div>
  </div>

  <div class="row">
