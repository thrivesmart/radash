<% content_for :page_title do %>
Edit Ad - 
<% end %>
<div class="container">
  <div class="page-header">
    <h1>
      Editing Ad

      <small><%= @org.name %></small>
    </h1>
  </div>

  <%= render 'form' %>

  <div class="clearfix"></div>
  <div class="pull-left">
    <%= link_to "<span class=\"glyphicon glyphicon-ban-circle\" aria-hidden=\"true\"></span> Cancel".html_safe, [@ad.org, @ad], class: "btn btn-default" %>
  </div>
  <div class="pull-right">
    <%= link_to "<span class=\"glyphicon glyphicon-trash\" aria-hidden=\"true\"></span> Delete ad...".html_safe, [@ad.org, @ad], method: :delete, data: { confirm: "Are you sure you want to delete this ad?" }, class: "btn btn-danger" %>
  </div>
</div>
