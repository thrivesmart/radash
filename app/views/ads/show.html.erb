<% content_for :page_title do %>
ad Details - 
<% end %>
<div class="container">
  <div class="page-header">
    <h1>
      <div class="pull-left">
        <%= link_to "<span class=\"glyphicon glyphicon-step-backward\" aria-hidden=\"true\"></span>".html_safe, org_ads_path(@ad.org), class: "btn btn-default", title: "Back to ads" %>
        &nbsp;
      </div>
      <div class="pull-right">
        <%= link_to "<span class=\"glyphicon glyphicon-pencil\" aria-hidden=\"true\"></span> Edit".html_safe, edit_org_ad_path(@ad.org, @ad), class: "btn btn-warning" %>
      </div>
      Ad Details
      <small><%= @org.name %></small>
    </h1>
  </div>

  <div class="row">
    <label class="col-sm-3 text-right text-muted">Creative</label>
    <div class="col-sm-9"><%= link_to @ad.creative.title, [@ad.org, @ad] %></div>
  </div>

  <div class="row">
    <label class="col-sm-3 text-right text-muted">Bid type</label>
    <div class="col-sm-9"><%= @ad.bid_type %></div>
  </div>

  <div class="row">
    <label class="col-sm-3 text-right text-muted">Bid in cents</label>
    <div class="col-sm-9"><%= @ad.bid_in_cents %></div>
  </div>

  <div class="row">
    <label class="col-sm-3 text-right text-muted">Locations</label>
    <div class="col-sm-9"><%= @ad.locations.blank? ? '[all]' : @ad.locations %></div>
  </div>

  <div class="row">
    <label class="col-sm-3 text-right text-muted">Devices</label>
    <div class="col-sm-9"><%= @ad.devices.blank? ? '[all]' : @ad.devices %></div>
  </div>

  <div class="row">
    <label class="col-sm-3 text-right text-muted">Os</label>
    <div class="col-sm-9"><%= @ad.os.blank? ? '[all]' : @ad.os %></div>
  </div>

  <div class="row">
    <label class="col-sm-3 text-right text-muted">Os versions</label>
    <div class="col-sm-9"><%= @ad.os_versions.blank? ? '[all]' : @ad.os_versions %></div>
  </div>

  <div class="row">
    <label class="col-sm-3 text-right text-muted">Subreddits</label>
    <div class="col-sm-9"><%= @ad.subreddits.blank? ? '[all]' : @ad.subreddits %></div>
  </div>

  <div class="row">
    <label class="col-sm-3 text-right text-muted">Interests</label>
    <div class="col-sm-9"><%= @ad.interests.blank? ? '[all]' : @ad.interests %></div>
  </div>

  <div class="row">
    <label class="col-sm-3 text-right text-muted">Placements</label>
    <div class="col-sm-9"><%= @ad.placements.blank? ? '[all]' : @ad.placements %></div>
  </div>

  <div class="row">
    <label class="col-sm-3 text-right text-muted">Paused at</label>
    <div class="col-sm-9"><%= @ad.paused_at %></div>
  </div>

  <div class="row">
    <label class="col-sm-3 text-right text-muted">Approved at</label>
    <div class="col-sm-9"><%= @ad.approved_at %></div>
  </div>

  <div class="row">
    <label class="col-sm-3 text-right text-muted">Approver name</label>
    <div class="col-sm-9"><%= @ad.approver_name %></div>
  </div>

  <hr/>

  <h2>
    Campaigns Running This Ad
  </h2>

  <table class="table table-striped table-hover tablesorter" id="Memberships-table">
    <thead>
      <tr>
        <th><span>Campaign</span></th>
        <th><span>Remove</span></th>
      </tr>
    </thead>

    <tbody>
      <% unless @ad.campaigns.any? %>
      <tr id="empty-table">
        <td class="bg-warning" colspan="2">No campaigns running this ad yet.</td>
      </tr>
      <% end %>
      <% @ad.campaigns.each do |campaign| %>
      <tr>
        <td><%= link_to campaign.name, [campaign.org, campaign] %></td>
        <td><%= link_to "<span class=\"glyphicon glyphicon-trash\" aria-hidden=\"true\"></span> Remove from Campaign...".html_safe, org_campaign_ads_campaign_path(campaign.org, campaign, @ad), method: :delete, data: { confirm: "Are you sure you want to remove this ad from this campaign?" }, class: "btn btn-danger" %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
  

</div>

