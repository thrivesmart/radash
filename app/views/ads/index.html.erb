<% content_for :page_title do %>
Ads - 
<% end %>
<div class="container">
  <div class="page-header">
    <h1>
      <div class="pull-left">
        <%= link_to "<span class=\"glyphicon glyphicon-step-backward\" aria-hidden=\"true\"></span>".html_safe, admin_org_path(@org), class: "btn btn-default", title: "Back" %>
        &nbsp;
      </div>

      <div class="pull-right">
        <%= link_to "<span class=\"glyphicon glyphicon-plus-sign\" aria-hidden=\"true\"></span> New Ad".html_safe, [:new, @org, :ad], class: "btn btn-success" %>
      </div>
      Listing Ads!
      <small><%= @org.name %></small>
    </h1>
  </div>

  <table class="table table-striped table-hover tablesorter" id="Ads-table">


    <thead>
      <tr>
    
        <th><span>Creative</span></th>
        <th><span>Bid type</span></th>
        <th><span>Bid in cents</span></th>
        <th><span>Locations</span></th>
        <th><span>Devices</span></th>
        <th><span>Os</span></th>
        <th><span>Os versions</span></th>
        <th><span>Subreddits</span></th>
        <th><span>Interests</span></th>
        <th><span>Placements</span></th>
        <th><span>Paused at</span></th>
        <th><span>Approved at</span></th>
        <th><span>Approver name</span></th>
      
      </tr>
    </thead>

    <tbody>
      <% unless @ads.any? %>
      <tr id="empty-table">
        <td class="bg-warning" colspan="13">No ads created yet.</td>
      </tr>
      <% end %>
      <% @ads.each do |ad| %>
      <tr class="linked-row" data-href="<%= org_ad_path(ad.org, ad) %>">
      
        <td><%= link_to ad.creative.title, org_ad_path(ad.org, ad) %></td>
        <td><%= link_to ad.bid_type, org_ad_path(ad.org, ad) %></td>
        <td><%= link_to ad.bid_in_cents, org_ad_path(ad.org, ad) %></td>
        <td><%= link_to ad.locations.blank? ? '[all]' : ad.locations, org_ad_path(ad.org, ad) %></td>
        <td><%= link_to ad.devices.blank? ? '[all]' : ad.devices, org_ad_path(ad.org, ad) %></td>
        <td><%= link_to ad.os.blank? ? '[all]' : ad.os, org_ad_path(ad.org, ad) %></td>
        <td><%= link_to ad.os_versions.blank? ? '[all]' : ad.os_versions, org_ad_path(ad.org, ad) %></td>
        <td><%= link_to ad.subreddits.blank? ? '[all]' : ad.subreddits, org_ad_path(ad.org, ad) %></td>
        <td><%= link_to ad.interests.blank? ? '[all]' : ad.interests, org_ad_path(ad.org, ad) %></td>
        <td><%= link_to ad.placements.blank? ? '[all]' : ad.placements, org_ad_path(ad.org, ad) %></td>
        <td><%= link_to ad.paused_at, org_ad_path(ad.org, ad) %></td>
        <td><%= link_to ad.approved_at, org_ad_path(ad.org, ad) %></td>
        <td><%= link_to ad.approver_name, org_ad_path(ad.org, ad) %></td>
        
        
        
      </tr>
      <% end %>
    </tbody>
  </table>
</div>




